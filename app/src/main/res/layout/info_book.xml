<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff3e0"
    android:padding="5dp"
    android:id="@+id/infoBook">

    <ImageView
        android:id="@+id/infoImageView1"
        android:layout_width="112dp"
        android:layout_height="168dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"/>

    <TextView
        android:id="@+id/infoTextView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="23dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/infoImageView1"
        android:text="Title Book 1"
        android:textSize="16sp"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/infoTextView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Author"
        android:layout_below="@+id/infoTextView1"
        android:layout_alignStart="@+id/infoTextView1"
        android:textColor="#000000" />

</RelativeLayout>